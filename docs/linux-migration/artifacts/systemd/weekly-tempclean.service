[Unit]
Description=Clean /tmp files older than 7 days
Wants=weekly-tempclean.timer

[Service]
Type=oneshot
ExecStart=/usr/bin/find /tmp -type f -mtime +7 -delete
StandardOutput=append:/var/log/system-maintenance/weekly-tempclean.log
StandardError=append:/var/log/system-maintenance/weekly-tempclean.log

